{
  "name": "osmium-solidity-extension",
  "displayName": "Osmium Solidity",
  "description": "",
  "version": "0.2.0",
  "publisher": "OsmiumToolchains",
  "repository": {
    "type": "git",
    "url": "https://github.com/astrodevs-labs/osmium-solidity"
  },
  "icon": "./assets/logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:solidity"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebar",
          "title": "Osmium Sidebar",
          "icon": "assets/logo.png"
        },
        {
          "id": "documentation",
          "title": "Osmium Documentation",
          "icon": "assets/logo.png"
        }
      ]
    },
    "views": {
      "sidebar": [
        {
          "type": "webview",
          "id": "osmium.sidebar",
          "name": "Osmium: Deploy/Interact",
          "when": "Osmium.showsidebar"
        }
      ],
      "documentation": [
        {
          "type": "webview",
          "id": "osmium.documentation",
          "name": "Osmium Documentation",
          "when": "Osmium.showdocumentation"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == solidity",
          "command": "osmium.format-sol-file",
          "group": "7_modification"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "osmium.gas-estimation",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "Osmium",
      "properties": {
        "Osmium.linter": {
          "type": "boolean",
          "default": true,
          "description": "Enable LINTER feature"
        },
        "Osmium.formatter": {
          "type": "boolean",
          "default": true,
          "description": "Enable FORMATTER feature"
        },
        "Osmium.gas estimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable GAS ESTIMATION feature"
        },
        "Osmium.slither": {
          "type": "boolean",
          "default": true,
          "description": "Enable SLITHER feature"
        },
        "Osmium.sidebar": {
          "type": "boolean",
          "default": true,
          "description": "Enable INTERACT & DEPLOY feature"
        },
        "Osmium.debugger": {
          "type": "boolean",
          "default": true,
          "description": "Enable DEBUGGER feature"
        },
        "Osmium.tests": {
          "type": "boolean",
          "default": true,
          "description": "Enable TESTS VIA FOUNDRY feature"
        },
        "Osmium.compiler": {
          "type": "boolean",
          "default": true,
          "description": "Enable COMPILER feature"
        },
        "Osmium.references": {
          "type": "boolean",
          "default": true,
          "description": "Enable REFERENCES feature"
        },
        "Osmium.auto format": {
          "type": "boolean",
          "default": false,
          "description": "Enable AUTO FORMAT"
        }
      }
    },
    "commands": [
      {
        "command": "osmium.format-sol-file",
        "title": "Osmium: Format Solidity File"
      },
      {
        "command": "osmium.format-sol-workspace",
        "title": "Osmium: Format Solidity Workspace"
      },
      {
        "command": "osmium.gas-estimation",
        "title": "Osmium: Gas Estimation"
      },
      {
        "command": "osmium.show-env-panel",
        "title": "Osmium: Open environment panel"
      },
      {
        "command": "osmium.documentation",
        "title": "Osmium: Documentation"
      },
      { 
        "command": "osmium.walkthrough",
        "title": "Osmium: Open Walkthrough"
      },
      {
        "command": "osmium.checkIfForgeInstalled",
        "title": "Osmium: Check if Foundry/Forge is installed"
      },
      {
        "command": "osmium.checkIfSlitherInstalled",
        "title": "Osmium: Check if Slither is installed"
      },
      {
        "command": "osmium.checkIfSolcInstalled",
        "title": "Osmium: Check if Solc is installed"
      }
    ],
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./assets/configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./assets/syntax.json",
        "balancedBracketScopes": [
          "*"
        ],
        "unbalancedBracketScopes": [
          "meta.scope.case-pattern.solidity"
        ]
      }
    ],
    "walkthroughs": [
      {
        "id": "osmium.getStarted",
        "title": "Get Started with Osmium Solidity",
        "description": "Let's check if you have all the dependencies required for this extension.",
        "steps": [
          {
            "id": "isForge",
            "title": "Check if foundry/forge is installed",
            "description": "**Foundry/Forge Overview**\n\nFoundry is a fast, portable toolkit for Ethereum development written in Rust. It includes forge, a powerful smart contract testing framework designed to streamline workflow and improve testing efficiency for developers.\n\nClick on the button below to check if Foundry/Forge is installed.\n\n[Verify forge](command:osmium.checkIfForgeInstalled)",
            "media": {
              "markdown": "./src/walkthroughs/welcome/foundry.md"
            }
          },
          {
            "id": "isSlither",
            "title": "Check if Slither is installed",
            "description": "**Slither Overview**\n\nSlither is a static analysis framework for smart contracts written in Solidity or Vyper. With Slither, you can run a series of vulnerability detectors on your Solidity contracts to flag potentially risky code and receive suggestions for corrections.\n\nClick on the button below to check if Slither is installed.\n\n[Verify Slither](command:osmium.checkIfSlitherInstalled)",
            "media": {
              "markdown": "./src/walkthroughs/welcome/slither.md"
            }
          },
          {
            "id": "isSolc",
            "title": "Check if the Solidity Compiler is installed",
            "description": "**Solidity Compiler Overview**\n\nThe Solidity Compiler is a tool that translates Solidity code into bytecode executable on the Ethereum Virtual Machine (EVM). Written in Go, itâ€™s essential for smart contract development, transforming high-level Solidity code into a format understood by the Ethereum blockchain.\n\nClick on the button bellow to check if Solc is installed.\n\n[Verify Solidity Compiler](command:osmium.checkIfSolcInstalled)",
            "media": {
              "markdown": "./src/walkthroughs/welcome/solc.md"
            }
          }
        ]
      }
    ]    
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "build": "webpack",
    "build:extension": "webpack",
    "lint": "eslint src --ext ts --fix",
    "lint:check": "eslint src --ext ts",
    "format": "prettier --write src/**/*.ts ",
    "format:check": "prettier src/**/*.ts",
    "test:ui": "vscode-test",
    "publish:extension": "webpack --mode production --devtool hidden-source-map && vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "toml": "^3.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "utf-8-validate": "^6.0.3",
    "uuid": "^9.0.1",
    "viem": "^2.8.18",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "sidebar": "workspace:*",
    "env-panel": "workspace:*",
    "vscode-languageclient": "^9.0.1"
  }
}
